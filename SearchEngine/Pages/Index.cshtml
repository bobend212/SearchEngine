@page
@using EuropePMC
@using System.Globalization
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="container">

    <form method="post" asp-page-handler="SearchPublication">
        <div class="row">
            <div class="col-11">
                <input type="search" class="search form-control" placeholder="Search here..." name="test2" />
            </div>
            <div class="col-1" style="text-align: center">
                <button class="btn btn-outline-primary">Search</button>
            </div>
        </div>
    </form>

</div>

<hr />

@if (@Model.TotalCount > 0)
{
    <p class="text-center">found <b>@Model.TotalCount.ToString("#,#", CultureInfo.InvariantCulture)</b> publications </p>
    <table class="table table-sm table-bordered">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Author(s)
                </th>
                <th>
                    Publication Date
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Collection)
            {
                <tr>
                    <td>@Html.DisplayFor(x => item.title)</td>
                    <td>@Html.DisplayFor(x => item.authorString)</td>
                    <td>@Convert.ToDateTime(item.firstPublicationDate).ToString("dd MMM yyyy", CultureInfo.InvariantCulture)</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="text-center">
        <h3>Nothing found</h3>
    </div>
}

